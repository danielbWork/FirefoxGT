{
	"manifest_version": 2,
	"name": "FirefoxGroupTabs",
	"description": "Have Chrome-like group tabs in firefox",
	"version": "0.0.1",
	"icons": {
		"64": "icons/icon.png"
	},
	"background": {
		"scripts": [
			"background_script.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.mozilla.org/*"
			],
			"js": [
				"content_script.js"
			]
		}
	],
	"browser_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_popup": "browserAction/index.html",
		"default_title": "FirefoxGroupTabs"
	},
	"page_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_popup": "pageAction/index.html",
		"default_title": "FirefoxGroupTabs"
	},
	"options_ui": {
		"page": "options/index.html"
	},
    "permissions": [
        "tabs",
        "contextMenus"
    ]
}