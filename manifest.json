{
	"manifest_version": 2,
	"name": "FirefoxGroupTabs",
	"description": "Have Chrome-like group tabs in firefox",
	"version": "0.0.1",
	"icons": {
		"64": "icons/icon.png"
	},
	"background": {
		"page": "src/background_page.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content_script.js"
			]
		}
	],
	"browser_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_popup": "browserAction/index.html",
		"default_title": "FirefoxGroupTabs"
	},
	"page_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_popup": "pageAction/index.html",
		"default_title": "FirefoxGroupTabs",
		"show_matches": ["<all_urls>"]
	},
	"options_ui": {
		"page": "options/index.html"
	},
    "permissions": [
        "tabs",
		"tabHide",
		"activeTab",
        "contextMenus",
		"storage",
		"<all_urls>",
		"notifications"
    ],
	"browser_specific_settings": {
		"gecko": {
		  "id": "addon@example.com"
		}
	  }
	  
}