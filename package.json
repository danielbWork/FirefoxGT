  "license": "MIT",
  "scripts": {
    "start": "parcel watch manifest.json src/webPages/*/* --host localhost --config @parcel/config-webextension",
    "build": "parcel build manifest.json src/webPages/*/* --config @parcel/config-webextension --target webext-prod"
  },
  "dependencies": {
    "eslint": "^8.24.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.8.4",
    "web-ext": "^7.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.7.0",
    "@types/webextension-polyfill": "^0.9.1",
    "parcel": "^2.7.0"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  }
}
